<div id="form">
  <h2>Login</h2>

  <form action="/auth/login" method="POST">

    <label>
      Email
      <input type="email" name="email" />
    </label>

    <label>Password
      <input type="password" name="password" />
    </label>

    <button type="submit">Login</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>