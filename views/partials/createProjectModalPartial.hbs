<!-- Modal -->
<div
  class="modal fade"
  id="createProjectModal"
  tabindex="-1"
  aria-labelledby="projectModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-body">
        <div class="container">
          <form id="create-project" action="/projects/create" method="post">
            <ul class="form-style-1">
              <li>
                <h5>Create Project</h5>
              </li><br />
              <li><label for="title">Title: </label>
                <input type="text" placeholder="Title" name="title" /></li>
              <li><label for="description">Description: </label>
                <input
                  type="text"
                  placeholder="Description"
                  name="description"
                /></li>
              <li><label for="githubURL">Github Repository URL: </label>
                <input type="text" name="githubURL" id="githubURL" />
              </li><br />
              <li>
                <div>
                  <button type="submit" class="modal-button">Create Project</button>
                  <button
                    type="button"
                    class="modal-button"
                    data-bs-dismiss="modal"
                  >Close</button>
                </div>
              </li>
            </ul>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>