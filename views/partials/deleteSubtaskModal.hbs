<!-- Modal -->
<div
  class="modal fade"
  id="deleteSubtaskModal{{_id}}"
  tabindex="-1"
  aria-labelledby="projectModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="delete-container">
        <h2>Are you sure you want to delete subtask:"{{title}}?"</h2>
        <p>You will not be able to get it back!</p><br /><br />
        <form action="/subtasks/delete/{{_id}}" method="post">
          <div class="delete-buttons-container">

            <button type="submit" class="modal-button" data-bs-dismiss="modal">
              Delete
            </button>
            <button
              type="button"
              class="modal-button"
              data-bs-dismiss="modal"
            >Close</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>