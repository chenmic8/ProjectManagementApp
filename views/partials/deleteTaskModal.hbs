<!-- Modal -->
<div
  class="modal fade"
  id="deleteTaskModal{{_id}}"
  tabindex="-1"
  aria-labelledby="projectModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Are you sure you want to delete task:"{{title}}"?</h2>
        <p>You will also delete all the associated subtasks!</p>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-footer">
        <form action="/tasks/delete/{{_id}}" method="post">
          <button type="submit" class="modal-button" data-bs-dismiss="modal">
            Delete
          </button>
          <button
            type="button"
            class="modal-button"
            data-bs-dismiss="modal"
          >Close</button>
        </form>
      </div>
    </div>
  </div>
</div>