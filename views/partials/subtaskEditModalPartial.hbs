<!-- Modal -->
<div
  class="modal fade"
  id="subtaskEditModal{{_id}}"
  tabindex="-1"
  aria-labelledby="subtaskModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-body">
        <div>
          <form
            action="/subtasks/edit/{{_id}}"
            method="post"
            enctype="multipart/form-data"
          >
            <ul class="form-style-1">
              <li>
                <h4>Edit Subtask</h4>
              </li>
              {{#if image}}
                <li>
                  <img src="{{image}}" alt="subtask" />
                </li>
              {{/if}}
              <li>
                <label for="state">Status: </label>
                <select name="state" id="state">
                  <option
                    selected="selected"
                    value="{{state._id}}"
                  >{{state.name}}</option>
                  {{#each otherStates}}
                    <option value="{{_id}}">{{name}}</option>
                  {{/each}}
                </select>
              </li>
              <li>
                <label for="title">Title: </label>
                <input name="title" id="title" type="text" value="{{title}}" />
              </li>
              <li>
                <label for="subtaskPicture">Change image: </label>
                <input id="subtaskPicture" type="file" name="subtaskPicture" />
              </li>
              <li>
                <label for="description">Description: </label>
                <textarea
                  name="description"
                  id="title"
                  type="text"
                >{{description}}</textarea>
              </li>
              <li>
                <label for="estimated-time">Estimated time: </label>
                <input
                  type="number"
                  name="estimatedTime"
                  id="estimated-time"
                  value="{{estimatedTime}}"
                />
              </li>
              <li>
                <label for="percent-complete">Percent complete: </label>
                <select name="percentComplete" id="percent-complete">
                  <option
                    value="{{percentComplete}}"
                    selected="selected"
                  >{{percentComplete}}</option>
                  <option value="0">0</option>
                  <option value="10">10</option>
                  <option value="20">20</option>
                  <option value="30">30</option>
                  <option value="40">40</option>
                  <option value="50">50</option>
                  <option value="60">60</option>
                  <option value="70">70</option>
                  <option value="80">80</option>
                  <option value="90">90</option>
                  <option value="100">100</option>
                </select>
              </li>
              <li>
                <label for="type">Subtask type: {{type}}</label>
                <select name="type" id="type">
                  <option value="{{type}}" selected>{{type}}</option>
                  <option value="actionable">actionable</option>
                  <option value="bug">bug</option>
                </select>
              </li>
              <li>
                <div>
                  <button
                    type="submit"
                    class="modal-button"
                    data-bs-dismiss="modal"
                  >Save</button>
                  <button
                    type="button"
                    class="modal-button"
                    data-bs-dismiss="modal"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteSubtaskModal{{_id}}"
                  >Delete</button>
                  <label
                    data-bs-dismiss="modal"
                    class="toggleLabel modal-button"
                    for="subtask-checkBtn"
                  >
                    Close
                  </label>
                </div>
              </li>
            </ul>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>