<div class="table-headings">

  <h5 id="project-header" data-bs-toggle="modal" data-bs-target="#projectDetailsModal"><a href="/projects/all-projects">My Projects > </a>{{project.title}}
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
      <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
    </svg>
  </h5>
  <p class="{{project.state.color}}">Status: {{project.state.name}}</p>
  {{#if project.latestCommitDate}}
    <p>latest commit date: {{project.latestCommitDate}}</p>
  {{/if}}
  <div>
    <button data-bs-toggle="modal" data-bs-target="#createTaskModal">New Task</button>
  </div>
</div>
<br>
{{#if tasks}}
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Estimated Time</th>
      <th>Percent Complete</th>
      <th>Time Remaining</th>
      <th>Status</th>
      <th>User</th>
      <th>Updated</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    {{!-- <tr data-bs-toggle="modal" data-bs-target="#exampleModal"> --}}
      {{>taskRowPartial}}
    {{!-- </tr> --}}
    {{/each}}
  </tbody>
</table>
{{else}}
<h6>No tasks added yet! Please add a new task</h6>
{{/if}}

{{>createTaskModalPartial project}}
{{>projectModalPartial project}}
{{>deleteProjectModal project}}